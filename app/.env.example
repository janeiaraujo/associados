#--------------------------------------------------------------------
# EXEMPLO DE CONFIGURAÇÃO - .env.example
# Copie este arquivo para .env e configure com seus valores reais
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'http://localhost/github_associados/app/public/'
app.forceGlobalSecureRequests = false
app.CSPEnabled = false

#--------------------------------------------------------------------
# DATABASE - MySQL
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = associados_db
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306
database.default.charset = utf8mb4
database.default.DBCollat = utf8mb4_general_ci

#--------------------------------------------------------------------
# EMAIL / SMTP
# Para Gmail: use senha de aplicativo (App Password)
# https://support.google.com/accounts/answer/185833
#--------------------------------------------------------------------

email.fromEmail = noreply@associados.local
email.fromName = Sistema de Associados
email.SMTPHost = smtp.gmail.com
email.SMTPUser = seu-email@gmail.com
email.SMTPPass = sua-senha-app-aqui
email.SMTPPort = 587
email.SMTPCrypto = tls
email.protocol = smtp
email.mailType = html
email.charset = utf-8
email.newline = "\r\n"

#--------------------------------------------------------------------
# ENCRYPTION
# Gerar chave: php spark key:generate
#--------------------------------------------------------------------

encryption.key = hex2bin:your-encryption-key-here-32-chars-min

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
session.cookieName = 'associados_session'
session.expiration = 7200
session.savePath = ''
session.matchIP = false
session.timeToUpdate = 300
session.regenerateDestroy = true

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

security.csrfProtection = 'session'
security.tokenRandomize = true
security.tokenName = 'csrf_token_name'
security.headerName = 'X-CSRF-TOKEN'
security.cookieName = 'csrf_cookie_name'
security.expires = 7200
security.regenerate = true
security.redirect = false
security.samesite = 'Lax'

#--------------------------------------------------------------------
# APPLICATION SETTINGS
#--------------------------------------------------------------------

app.adminEmail = admin@associados.local
app.adminName = Administrador
app.adminPassword = Admin@123456

# Reset password token expiration (minutes)
app.resetTokenExpiration = 30

# Upload settings (bytes)
app.uploadMaxSize = 5242880
app.uploadAllowedTypes = xlsx,xls

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

logger.threshold = 4
